<% if (useDashboard) { %>//- [dash:data]
    {
        "status": "development",
        "category": "<%= view %>",
        "label": "<%= name %>",
        "link": "../dashboard/generated/<%= name %>.html"
    }
    [/dash]
//- [dash:jade]
    +<%= name || 'example' %>()
    [/dash]

<% } %>mixin <%= name || 'example' %>()
    div.<%= _.slugify(name.toLowerCase()) %>
        p This is an example paragraph<% } else if (view === 'layout') { %>
extend base

block layout

    //- Provides layout level markup
    .layout-wrapper<% if (name) { %>(class="<%= _.slugify(name.toLowerCase()) %>")<% } %>
        block content

<% } else if (view === 'page') { %><% if (useDashboard) { %>
//- [dash:data]
    {
        "status": "development",
        "category": "<%= view ? view : 'page' %>",
        "label": "<%= _.titleize(name) %>",
        "link": "<% if (view === 'page') { %>../<%= _.slugify(name.toLowerCase()) %>.html<% } else { %>../views/<%= view %>s/<%= _.slugify(name.toLowerCase()) %>.html<% } %>"
    }
    [/dash]
<% } %><% if (!useTemplate) { %>extend ./layouts/base<% } else { %>extend ./layouts/<%= useTemplate %><% } %>

//- use the 'block body' if you need to set a page-level class on the <body> tag
block body
    - var bodyClass = '<%= _.slugify(name.toLowerCase()) %>';

block content
    +heading({type:'h1', class:'heading', text: 'Sample Heading'})
    p <%= name || 'empty' %> page<% } %>
