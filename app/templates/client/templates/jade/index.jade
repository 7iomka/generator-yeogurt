<% if (useDashboard) { %>//- [dash:data]
    {
        "status": "development",
        "category": "page",
        "label": "Home",
        "link": "../index.html"
    }
    [/dash]
<% } %>//- Homepage Markup
extend ./layouts/base

//- use the 'block body' if you need to set a page-level class on the <body> tag
block body
    - var bodyClass = 'homepage';

block content
    .main-container
        h1 Welcome to Yeogurt!
        p. Take a look at the <a href="https://github.com/larsonjj/generator-yeogurt#yeogurt-generator---">documentation</a> and start mixing up something awesome.
        p
            img.logo(src="/images/yeogurt-swirl.png", width="75px")<% if (useDashboard || useJsdoc || useKss) { %>
        p.links<% if (useDashboard) { %>
            a(href="/docs/dashboard/index.html") Dashboard<% } %><% if (useKss) { %>
            a(href="/docs/styleguide/index.html") Styleguide<% } %><% if (useJsdoc) { %>
            a(href="/docs/api/index.html") API<% } %><% } %>
    code.version v<%= pkg.version %>