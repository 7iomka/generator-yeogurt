<% if (useDashboard) { %>//- [dash:data]
    {
        "status": "development",
        "category": "page",
        "label": "Forgot",
        "link": "../../forgot.html"
    }
    [/dash]<% } %>
extends ../layouts/base

block content
    .col-sm-8.col-sm-offset-2
        form(method='post')
            legend Forgot Password<% if (useAuth) { %>
            input(type='hidden', name='_csrf', value=_csrf)<% } %>
            .form-group
                p Enter your email address below and we will send you password reset instructions.
                label.control-label(for='email') Email
                input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus=true)
            .form-group
                button.btn.btn-primary(type='submit')
                    i.fa.fa-key
                    | Reset Password