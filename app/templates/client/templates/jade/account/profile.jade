extends ../layouts/one-column

block content

    img(src="#{publicInfo.picture || 'https://gravatar.com/avatar/?s=200&d=retro'}" alt="profile image")
    p
        if publicInfo.firstName && publicInfo.lastName
            h3 #{publicInfo.firstName} #{publicInfo.lastName}
        else if publicInfo.firstName
            h3 #{publicInfo.firstName}
        h4 #{publicInfo.username}

    hr

    p
        | Email: #{publicInfo.email}

    if publicInfo.location
        p
            | Location: #{publicInfo.location}

    if publicInfo.gender
        p
            | Gender: #{publicInfo.gender}

    if publicInfo.website
        p
            | Website: #{publicInfo.website}


