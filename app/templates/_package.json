{
    "name": "<%= _.slugify(projectName) %>",
    "version": "0.0.1",<% if (jsOption ==='Browserify') { %>
    "browser": {
        "jquery": "./dev/bower_components/jquery/jquery.js"
    },
    "browserify-shim": {
        "jquery": "$"
    },
    "browserify": {
        "transform": [
            "browserify-shim"
        ]
    },<% } %>
    "dependencies": {},
    "devDependencies": {
        "grunt": "~0.4.2",
        "grunt-contrib-connect": "~0.5.0",
        "grunt-contrib-watch": "~0.5.3",
        "grunt-contrib-clean": "~0.5.0",
        "grunt-contrib-compress": "~0.5.3",
        "grunt-contrib-jade": "~0.9.0",
        "grunt-contrib-htmlmin": "~0.1.3",<% if (jsOption ==='RequireJS') { %>
        "grunt-contrib-requirejs": "~0.4.1",<% } %><% if (jsOption ==='Browserify') { %>
        "grunt-browserify": "~1.3.0",
        "browserify-shim": "~3.1.4",<% } %>
        "grunt-contrib-imagemin": "~0.4.0",<% if (jshint) { %>
        "grunt-contrib-jshint": "~0.8.0",
        "jshint-stylish": "~0.1.4",<% } %>
        "grunt-contrib-copy": "~0.5.0",
        "grunt-contrib-uglify": "~0.2.7",<% if (cssOption ==='SASS') { %>
        "grunt-sass": "~0.10.0",<% } %><% if (cssOption === 'LESS') { %>
        "grunt-contrib-less": "~0.8.3",<% } %>
        "grunt-open": "~0.2.2",
        "grunt-string-replace": "~0.2.7",
        "grunt-svgmin": "~0.3.0",
        "grunt-mocha": "~0.4.0",
        "grunt-newer": "~0.6.0",
        "jit-grunt": "~0.1.2",
        "load-grunt-tasks": "~0.2.1",
        "lodash": "~2.4.1",
        "time-grunt": "~0.2.5",
        "bower": "~1.2.8"<% if (useFTP) { %>,
        "grunt-ftpush": "~0.3.3"<% } %>
    },
    "engines": {
        "node": ">=0.8.0"
    }
}
}
