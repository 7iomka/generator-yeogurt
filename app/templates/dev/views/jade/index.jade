<% if (useDashboard) { %>//- [dash:data]
    {
        "status": "development",
        "category": "page",
        "label": "Home",
        "link": "../index.html"
    }
    [/dash]
<% } %>//- Homepage Markup
extend ./templates/base

//- use the 'block body' if you need to set a page-level class on the <body> tag
block body
    - var bodyClass = 'homepage';

block content
    .main-container
        +heading({type:'h1', class:'heading', text: 'Welcome to Yeogurt!'})
        p. Take a look at the <a href="https://github.com/larsonjj/generator-yeogurt#yeogurt-generator---">documentation</a> and start mixing up something awesome.
        p
            img.logo(src="images/yeogurt-swirl.png", width="75px")<% if (useDashboard || useDocker || useKss) { %>
        p.links
            <% if (useDashboard) { %>a(href="dashboard/index.html") Dashboard<% } %><% if (useKss) { %>
            a(href="docs/styleguide/index.html") Styleguide<% } %><% if (useDocker) { %>
            a(href="docs/api/README.md.html") API<% } %><% } %>
    code.version v<%= pkg.version %>