//- Base template
//- All other templates will extend from this

//- Include all modules (components/modules)
include ../components/all-components
include ../../../markup/modules/all-modules

doctype 5
<% if (ieSupport) { %>//if lt IE 9
    <html class="no-js lt-ie9"><% } %>
//[if gt IE 8]><!
html(lang="en", class='no-js')
    //<![endif]
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        title <%= projectName %> Dashboard
        meta(name='description', content='')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='styles/main.css')
        script(src='../bower_components/modernizr/modernizr.js')<% if (ieSupport) { %>
        // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
        //if lt IE 9
            script(src="../bower_components/respond/respond.min.js")
            script(src="../bower_components/html5shiv/dist/html5shiv.js")<% } %>
        script(src="../bower_components/jquery/jquery.min.js")
        script(src="scripts/main.js")
    //- Define bodyClass variable and body block to give pages access to change <body> classes
    -var bodyClass
    block body
    body(class=(bodyClass ? bodyClass : false))
        //- Define template block so templates have access to it when this template is extended
        block template
